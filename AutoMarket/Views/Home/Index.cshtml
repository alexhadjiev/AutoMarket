@model IEnumerable<CarImageAndNameViewModel>
@{
    ViewData["Title"] = "Home Page";
    var cars = Model.ToList();
}

@if (!cars.Any())
{
    <div class="jumbotron jumbotron-fluid mt-4">
        <div class="container">
            <h1 class="display-4">Welcome to the best place for buying cars!</h1>
            <p class="lead">There are no cars yet!</p>
        </div>
    </div>
}

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @for (int i = 0; i < cars.Count(); i++)
                    {
                        var car = cars[i];
                        <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                            <img class="d-block w-100" style="height: 500px;" src="@car.ImageUrl" alt="@car.CarModel">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@car.CarModel</h5>
                            </div>
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col text-center">
            <a href="#" class="btn btn-primary btn-lg">Browse Cars</a>
        </div>
    </div>
</div>